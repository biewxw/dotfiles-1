! Fonts
Xft.dpi: 96
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! URxvt
URxvt.font: xft:scientifica:size=8
URxvt.boldFont: xft:scientifica:size=8
URxvt.cursorUnderline: true
URxvt.cursorBlink: 1
URxvt.letterSpace: 0
URxvt.scrollBar: false
URxvt.externalBorder: 0
URxvt.internalBorder: 25

! rofi
rofi.font: scientifica Regular 8
rofi.terminal: urxvt
rofi.ssh-client: ssh
