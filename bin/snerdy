#!/bin/bash

# a system info script written by yours truly
# it's hardcoded stuff, lulz

red="\e[31m"
grn="\e[32m"
ylw="\e[33m"
cyn="\e[36m"
blu="\e[34m"
prp="\e[35m"
bprp="\e[35;1m"
rst="\e[0m"

echo

color-echo()
{  # print with colors
    echo -e " $prp$1  $rst$2"
}

# shell
color-echo 'shell  '   'zsh'

# wm
color-echo 'wm     '   'i3'

# distro
color-echo 'distro '   'Arch'

# colors
echo
echo -e " $red▪$rst $grn▪$rst $blu▪$rst $ylw▪$rst $cyn▪$rst $prp▪$rst $bprp▪$rst"
echo
