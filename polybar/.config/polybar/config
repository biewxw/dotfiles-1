[module/spotify]
type = custom/script
exec = playerctl status &> /dev/null && echo "$(playerctl metadata artist) - $(playerctl metadata title)" || echo ""
interval = 1

format =   <label>
label-maxlen = 40
label-ellipsis = true

format-foreground = ${colours.primary}

click-left = playerctl play-pause

;=====================================================

[module/temperature]
type = internal/temperature
